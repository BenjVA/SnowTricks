{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.mail) }}
        {{ form_row(registrationForm.username, {
            label: 'Pseudo'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.ConsentementRgpd) }}

        <button type="submit" class="btn btn-lg btn-outline-dark">M'inscrire</button>
    <a href="{{ path('app_login') }}" class="btn btn-secondary mt-1">Me connecter</a>
    {{ form_end(registrationForm) }}

{% endblock %}
