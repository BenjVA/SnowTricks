{% extends 'base.html.twig' %}

{% block title %}Connection page{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container row">
        <div class="text-center col">
            <form action="{{ path('app_login') }}" method="post" class="card mx-auto form-control" style="width: 18rem;">
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control my-2 mx-2" required>

                <label for="password">Mot de passe:</label>
                <input type="password" id="password" name="_password" class="form-control my-2 mx-2" required>

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"> #}

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="btn btn-outline-dark mx-5 my-2">Connexion</button>
            </form>
        </div>
    </div>
{% endblock %}
